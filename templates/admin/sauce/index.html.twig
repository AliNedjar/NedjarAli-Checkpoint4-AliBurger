{% extends 'layoutAdmin.html.twig' %}

{% block title %}Administration Sauces{% endblock %}

{% block body %}
    <h1 class="title text-center mt-4">Administration des Sauces</h1>
    <div class="container">
        <a class="btn btn-success btn mb-2" href="{{ path('admin_sauce_new') }}">Ajouter une sauce</a>
        <table class="table text-dark">
            <thead class="thead-light text-center">
            <tr>
                <th>Nom</th>
                <th>Origine</th>
                <th>Ingrédients</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for sauce in sauces %}
                <tr>
                    <td>{{ sauce.Name }}</td>
                    <td>{{ sauce.Origin }}</td>
                    <td>{{ sauce.Ingredient }}</td>
                    <td>
                        <a class="col btn btn-primary mb-sm-2 mb-2 btn"
                           href="{{ path('admin_sauce_edit', {'id': sauce.id}) }}">
                            Modifier</a>
                        {{ include('admin/sauce/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary btn mb-4" href="{{ path('admin_sauce_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}

