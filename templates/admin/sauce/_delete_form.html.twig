<form method="post" action="{{ path('admin_sauce_delete', {'id': sauce.id}) }}"
      onsubmit="return confirm('Veux-tu vraiment supprimer cette sauce ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sauce.id) }}">
    <button class="btn btn-danger mb-sm-2 mb-2 btn">Supprimer</button>
</form>
