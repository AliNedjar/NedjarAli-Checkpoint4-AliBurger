{% extends 'layoutAdmin.html.twig' %}

{% block title %}Administration Sauces{% endblock %}

{% block body %}
    <h1 class="title text-center mt-4">Administration des Sauces</h1>
    <div class="container">
        <table class="table text-dark">
            <thead class="thead-light text-center">
            <tr>
                <th>Numéro</th>
                <th>Propos</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.comment }}</td>
                    <td class="justify-content-center">
                        {{ include('admin/comment/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary btn mb-4" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
